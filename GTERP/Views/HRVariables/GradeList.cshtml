@model IEnumerable<GTERP.Models.Cat_Grade>

<div class="container-fluid">

    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Grade Creation", "CreateGrade", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">Grade List</h2>
            </div>
        </div>
    </div>

    <form class="card p-2 table-responsive">
        <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
            <thead class="text-nowrap">
                <tr>
                    @*<th>
                            @Html.DisplayNameFor(model => model.ComId)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.GradeName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.GradeNameB)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MinGS)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TtlManpower)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SalaryRange)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.ComId)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.GradeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.GradeNameB)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MinGS)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TtlManpower)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalaryRange)
                        </td>

                        <td class="text-nowrap">
                            <span data-toggle="tooltip" title="Edit!">
                                @Html.ActionLink(" ", "EditGrade", new { id = item.GradeId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                            </span>
                            <span data-toggle="tooltip" title="Delete!">
                                @Html.ActionLink(" ", "DeleteGrade", new { Id = item.GradeId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                            </span>
                        </td>
                    </tr>
                }
        </table>
        <br />
    </form>
</div>


