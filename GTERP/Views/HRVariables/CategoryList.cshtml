@model IEnumerable<GTERP.Models.Category>

<div class="container-fluid">

    <div class="text-center">
        <div class="row mb-2">
            <div class="col-md-3 col-12">
                @Html.ActionLink("Category Creation", "CreateCategory", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>
            <div class="col-md-9 col-12">
                <h2 id="styletext">Category List</h2>
            </div>
        </div>
    </div>

    <form class="card p-2">
        <div class="table-responsive text-nowrap">
            <table id="tbllist" class="table table-striped table-bordered table-sm  table-hover" cellspacing="0" width="100%">
                <thead class="">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.CategoryCode)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th width="5%">
                            @Html.DisplayNameFor(model => model.CategoryImage)
                        </th>
                        <th width="5%">
                            @Html.DisplayNameFor(model => model.CategoryImagePath)
                        </th>
                        <th>
                            Action
                        </th>

                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CategoryCode)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td id="uploadPhoto">
                                @if (item.CategoryImage == null)
                                {
                                    <img src="@Url.Content("Content/img/" + 0 + ".png")" class="img-thumbnail" multiple />
                                }
                                else
                                {
                                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.CategoryImage))" class="img-thumbnail">

                                }
                            </td>
                            <td>
                                @*<img src="@Url.Content("uploads/"+item.ProductId + ".jpg")" class="img-thumbnail" width="15%" multiple />*@
                                <img id="currentPhoto" src="@Url.Content(item.CategoryImagePath + item.CategoryId + item.CategoryFileExtension)" onerror="this.onerror=null; this.src='uploads/0.png'" class="img-thumbnail">
                                @*<img src='@Url.Action("uploads", "App_Data", new { id = item.ProductId+".jpg" })' />*@
                            </td>
                            <td>
                                <span data-toggle="tooltip" title="Edit!">
                                    @Html.ActionLink(" ", "EditCategory", new { id = item.CategoryId }, new { @class = "fas fa-edit btn btn-warning btn-xs", @target = "_blank" })
                                </span>
                                <span data-toggle="tooltip" title="Delete!">
                                    @Html.ActionLink(" ", "DeleteCategory", new { Id = item.CategoryId }, new { @class = "far fa-trash-alt btn btn-danger btn-xs" })
                                </span>


                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </form>
</div>



