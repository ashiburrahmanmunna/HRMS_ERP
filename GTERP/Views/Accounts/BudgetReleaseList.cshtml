@model IEnumerable<GTERP.Models.Acc_BudgetRelease>

<div class="container-fluid">
    <form class="card p-2">
        <div class="row mb-1">
            <div class="col-md-2 col-12">
                @Html.ActionLink("Budget Release Creation", "CreateBudgetRelease", null, null, new { @class = "btn btn-outline-info btn-block rounded-0", @id = "btnBack" })
            </div>

            <div class="col-md-6 col-12">
                <h2 id="styletext">Budget Release List</h2>
            </div>

            <div class="col-md-4 col-12 text-left pt-2">
                <fieldset>
                    <label class="pr-2"><input type="radio" name="RptType" value="PDF" checked="checked" /> PDF  </label>
                    <label class="pr-2"><input type="radio" name="RptType" value="EXCEL" /> EXCEL  </label>
                    <label class="pr-2"><input type="radio" name="RptType" value="WORD" /> WORD  </label>

                </fieldset>
            </div>
        </div>


        <div class="py-1">
            <div class="row">
                <div class="col-md-5 col-12">
                    <div class="input-group mb-1">
                        <div class="input-group-prepend">
                            <span class="input-group-text py-0">
                                Fiscal Year
                            </span>
                        </div>
                        <select class="form-control" asp-items="ViewBag.FiscalYearId" id="FiscalYearId"></select>

                    </div>
                </div>

                @*<div class="col-md-3 col-12">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <span class="input-group-text py-0">
                                    <label>Fiscal Year</label>
